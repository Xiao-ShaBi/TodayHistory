/* pages/todayhistory/todayhistory.wxss */
.date-show{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 140px;
  justify-content : space-around;
  align-items : center;
  background-color: #f5f0e9;
  box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.1);
}
.date{
  display: -webkit-flex;
  display: flex;
  width: 100px;
  height: 100px;
  justify-content : center;
  align-items : center;
  border-radius: 50px;
  background-color: #00ff00;
}
.date1{
  display: -webkit-flex;
  display: flex;
  justify-content : center;
  width: 90px;
  height: 90px;
  align-items : center;
  border-radius: 45px;
  background-color: #00ffff;
}
.date2{
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content : center;
  align-items : center;
  width: 70px;
  height: 70px;
  border-radius: 35px;
  background-color: #ff00ff;
}

.main{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.scroll-show{
  width: 100%;
  height: 80%;
  flex-grow: 1;
  background-color: #ff00ff;
}

page{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}