/* pages/todayhistory/todayhistory.wxss */
.date-show{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 140px;
  justify-content : space-around;
  align-items : center;
  background-color: #f5f0e9;
  box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.1);
}
.date{
  display: -webkit-flex;
  display: flex;
  width: 100px;
  height: 100px;
  justify-content : center;
  align-items : center;
  border-radius: 50px;
  background-color: rgba(255, 148, 71, 0.1);
}
.date1{
  display: -webkit-flex;
  display: flex;
  justify-content : center;
  width: 90px;
  height: 90px;
  align-items : center;
  border-radius: 45px;
  background-color: rgba(255, 148, 71, 0.2);
}
.date2{
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content : center;
  align-items : center;
  width: 70px;
  height: 70px;
  border-radius: 35px;
  background-color: #ff9447;
}

.main{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.scroll-show{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}

page{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}

.block1{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  border-left: 2px solid #eaeaea;
  color: #999999;
  padding-top: 7px;
  padding-bottom: 7px;
}

.show-history{
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items : baseline;
  position: relative;
}

.title{
  font-size: 15px;
  margin-left: 16px;
  padding: 10px;
  border-radius: 50px;
  background-color: #ffffff;
  box-shadow: 0 2px 0 0 rgba(0, 0, 0, 0.04);
  color: #333333;
}
.yeartext{
  position: relative;
  min-width: 60px;
  text-align: center;
  font-size: 13px;
  color: #777777;
}
.point{
  z-index: 9;
  width : 12px;
  height : 12px;
  margin-left : 54px;
  position: absolute;
  top: 50%;
  margin-top: -6px;
}
.jintian{
  width: 20px;
  height: 20px;
  border-radius: 10px;
  background-color: #ff9447;
  position: absolute;
  margin-top: -80px;
  margin-left: 280px;
}